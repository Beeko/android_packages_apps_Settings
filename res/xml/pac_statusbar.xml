<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/pac_settings_statusbar"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Battery settings -->
    <PreferenceScreen
            android:key="battery_settings"
            android:title="@string/pac_settings_battery"
            android:fragment="com.android.settings.pac.PACBattery"
            android:layout="@layout/pac_battery_preference"
            />

    <!-- Clock settings -->
    <PreferenceScreen
            android:key="clock_settings"
            android:title="@string/pac_settings_clock"
            android:fragment="com.android.settings.pac.PACClockSetting"
            android:layout="@layout/pac_clock_preference"
            />

    <!-- General options -->
    <PreferenceScreen
            android:key="status_bar_settings"
            android:title="@string/pac_settings_general"
            android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
            android:layout="@layout/pac_statusbar_preference"
            />

    <!-- Traffic settings -->
    <PreferenceScreen
            android:key="traffic_settings"
            android:title="@string/traffic_category"
            android:fragment="com.android.settings.pac.NetworkTraffic"
            android:layout="@layout/pac_traffic_preference"
            />

</PreferenceScreen>