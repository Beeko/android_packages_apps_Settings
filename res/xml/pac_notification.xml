<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/pac_settings_notification"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Notification drawer -->
    <PreferenceScreen
            android:key="notification_drawer_settings"
            android:title="@string/pac_settings_general"
            android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings"
            android:layout="@layout/pac_notifdrawer_preference"
            />

    <!-- Quick Settings Panel -->
    <PreferenceScreen
            android:key="notification_drawer_settings"
            android:title="@string/qs_category_title"
            android:fragment="com.android.settings.pac.PACQuickSetting"
            android:layout="@layout/pac_quicksetting_preference"
            />

    <!-- Notification manager -->
    <PreferenceScreen
            android:id="@+id/notification_manager"
            android:title="@string/notification_manager"
            android:fragment="com.android.settings.notification.NotificationManagerSettings"
            android:layout="@layout/pac_notifmanager_preference"
            />

</PreferenceScreen>